@model HouseHubWeb.Models.BuscarImovelViewModel

@{
    ViewData["Title"] = "BuscarImovel";
}

<h1>BuscarImovel</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarImovel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="btn-group mb-2 w-100" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check" name="Modalidade" id="alugar" value="Alugar" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="alugar">Alugar</label>

                <input type="radio" class="btn-check" name="Modalidade" id="comprar" value="Comprar" autocomplete="off">
                <label class="btn btn-outline-primary" for="comprar">Comprar</label>
            </div>
            <span asp-validation-for="Modalidade" class="text-danger"></span>

            <div class="form-group mb-2">
                <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="Bairro" class="form-control" placeholder="bairro" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <div class="form-group w-50 mb-2">
                    <input asp-for="ValorMaximo" class="form-control" placeholder="Valor até" />
                    <span asp-validation-for="ValorMaximo" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 w-50">
                    <input asp-for="Quartos" class="form-control" placeholder="Quartos" />
                    <span asp-validation-for="Quartos" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group w-100">
                <input type="submit" value="Buscar" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

