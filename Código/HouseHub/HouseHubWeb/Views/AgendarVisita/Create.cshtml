@model HouseHubWeb.Models.AgendamentoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>INFORME O DIA DA VISITA</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="DataVisita" class="control-label"></label>
                <input asp-for="DataVisita" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />

                <span asp-validation-for="DataVisita" class="text-danger"></span>
            </div>

            

            <div class="form-group mb-3" >
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control" placeholder="Adicionar obeservações:" rows="6" style="resize: none;"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>

            <div class="form-group mb-5">
                <input type="submit" value="AGENDAR" class="btn btn-warning btn-laranja" />
            </div>

            <div class="mb-3">
                <h5 class="m-0">Ou se Preferir:</h5>
                <span class="btn btn-secondary">@Model.Telefone</span>

            </div>

            @Html.HiddenFor(x => x.IdImovel)



            
        </form>
    </div>
</div>
